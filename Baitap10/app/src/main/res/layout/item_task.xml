<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.baitap11.util.DateUtils" />
        <import type="android.view.View" />
        <variable
            name="task"
            type="com.example.baitap11.model.Task" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Checkbox chỉ xóa khi được tích vào -->
            <CheckBox
                android:id="@+id/cbCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvTaskTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{task.title}"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTaskDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{task.description}"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvDueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"Hạn: " + DateUtils.formatDate(task.dueDate)}'
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="italic"
                    android:visibility="@{task.dueDate != null ? View.VISIBLE : View.GONE}" />
            </LinearLayout>

            <!-- Nút chỉnh sửa mới -->
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
